version: '3'
services:
  auth-server:
    build:
      context: .
      dockerfile: Dockerfile.auth
    ports:
      - "3000:3000"
    depends_on:
      - mongo

  api-server:
    build:
      context: .
      dockerfile: Dockerfile.api
    ports:
      - "4000:4000"
    depends_on:
      - redis

  redis:
    image: redis
    ports:
      - "6379:6379"

  mongo:
    image: mongo
    ports:
      - "27017:27017"
